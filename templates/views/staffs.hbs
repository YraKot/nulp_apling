<div class="container">
	<div class="page-header text-center jumbotron">
		<h2>Професорсько-викладацький склад</h2>
	</div>
</div>
<div class="container">
	<div class="row">
		{{# each staffs}}
		<div class="col-md-3">
			<div class="thumbnail">
				{{# if image}}
					<img src="{{ cloudinaryUrl image crop="fit" }}"  >
				{{/if}}
				<div class="caption">
					<a href="{{staffUrl slug}}">{{{title}}}</a>
				</div>
			</div>
		</div>
		{{/each}}
	</div>
</div>
